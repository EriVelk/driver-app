extends ../layout

block content 
     form(action='' method='POST')
          div(class='card mt-2')
               div(class='card-body')
                    h4(class='card-title text-center')= title
                    div(class='form-group')
                         label(for='username') Username
                         input(type='username' class='form-control' id='username' name='username' required='true' autocomplete='off')
                    div(class='form-group mt-2')
                         label(for='password') Password 
                         input(type='password' class='form-control' id='password' name='password' required='true' autocomplete='current-password')
               div(class='card-footer text-center')
                    div(class='d-grid gap-2')
                         button(type='submit' class='btn btn-primary mb-2') Sign In 